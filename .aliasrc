#!/bin/zsh

# Alias for bpytop
alias mon=bpytop

# Check if a binary exists and create an alias if it does
check_and_alias() {
    local binary="$1"
    local alias_name="$2"
    if command -v "$binary" &>/dev/null; then
        alias "$alias_name"="$binary"
    fi
}

# Example usage:
check_and_alias "kubectx" "kctx"
check_and_alias "nvim" "vi"
check_and_alias "/bin/ls" "l"
check_and_alias "fuck" "f"
check_and_alias "z" "cd"
check_and_alias "colorls" "ls"
check_and_alias "lazygit" "g"
check_and_alias "python3" "python"
check_and_alias "pip3" "pip"

# load git alias
source $HOME/.dotfiles/.git_aliasrc
# load Kubernetes alias
source $HOME/.dotfiles/.kubectl_aliasrc
